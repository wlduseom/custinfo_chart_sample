<mvc:View
	controllerName="sync.sap.custinfo.controller.Master"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	displayBlock="true">
	<Page
		title="{i18n>title}"
		showNavButton="false">
		<List
			headerText="Measure"
			mode="MultiSelect"
			id="MeasureList"
			selectionChange=".onChartTypeChanged"
			includeItemInSelection="true">
			<StandardListItem
				id="Custtel"
				title="Custtel"
				description="Custtel"
				selected="true"/>
			<StandardListItem
				id="Zipcode"
				title="Zipcode"
				description="Zipcode"
				selected="true"/>
			<StandardListItem
				id="Custdsct"
				title="Custdsct"
				description="Custdsct"
				selected="true"/>
		</List>
		<Panel headerText="Chart Type">
			<Select
				id="select"
				change=".onChartTypeChanged"
				width="100%">
				<items>
					<core:Item text="Bar" key="Bar"/>
				</items>
				<items>
					<core:Item text="Line" key="Line"/>
				</items>
				<items>
					<core:Item text="Column" key="Column"/>
				</items>
				<items>
					<core:Item text="Stacked Column" key="Stacked_Column"/>
				</items>
			</Select>
			<Select
				id="selectColor"
				change=".onChartTypeChanged"
				width="100%">
				<items>
					<core:Item text="Default Color" key="Default_Color"/>
				</items>
				<items>
					<core:Item text="Semantic Color" key="Semantic_Color"/>
				</items>
			</Select>
		</Panel>
		<Panel headerText="Popover Effect">
			<Select
				id="selectPopover"
				change=".onChartTypeChanged"
				width="100%">
				<items>
					<core:Item text="Default" key="Default"/>
				</items>
				<items>
					<core:Item text="Customer Popover" key="Customer_Popover"/>
				</items>
			</Select>
		</Panel>
	</Page>
</mvc:View>
